<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/AddA"
                android:onClick="ADDA"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Add A"/>

            <Button
                android:id="@+id/removeA"
                android:onClick="removeA"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Remove A"/>

            <Button
                android:id="@+id/ReplaceAwithB"
                android:onClick="replaceAwithB"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Replace A with B"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/AddB"
                android:onClick="ADDB"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Add B"/>

            <Button
                android:id="@+id/removeB"
                android:onClick="removeB"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Remove B"/>

            <Button
                android:id="@+id/ReplaceBwithA"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="replaceBwithA"
                android:text="Replace B with A"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/attachA"
                android:onClick="AttachA"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Attach A"/>

            <Button
                android:id="@+id/detachA"
                android:onClick="detachA"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Detach A"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#7AC5A8"
            android:layout_margin="20dp"
            android:id="@+id/group">
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>